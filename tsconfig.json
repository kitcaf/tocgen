{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "noEmit": true, /*让 tsc 只做类型检查，不输出文件 由打包工具tsup处理 */
        "target": "ESNext", /* 编译成最新的 JS 语法 */
        "module": "NodeNext", /* 使用 Node 原生模块规范 */
        "moduleResolution": "NodeNext",
        "outDir": "./dist", /* 输出目录 */
        "rootDir": "./src", /* 源码目录 */
        "strict": true, /* 开启严格类型检查 */
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "test"
    ]
}